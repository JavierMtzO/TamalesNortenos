<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css"
        integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    </link>
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Anton&family=Catamaran&display=swap" rel="stylesheet">
    <link href="http://cdn.datatables.net/1.10.24/css/jquery.dataTables.min.css" rel="stylesheet">

    <link rel="stylesheet" href="css/style.css">
    <link rel="stylesheet" href="css/styles.css">

    <title>Tamales norteños</title>
</head>

<body>
    <div class="container tamales-navbar">
        <nav class="navbar navbar-expand-lg navbar-light bg-transparent">
            <a class="navbar-brand tamales-navbar-logo" href="/inicio">
                <img src="img/tamales-logo.jpeg" width="220" height="160" alt="">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
        </nav>
        <hr>
    </div>

    <div class="container">
        <div class="d-flex" id="wrapper">
            <!-- Sidebar-->
            <div class="border-end bg-white" id="sidebar-wrapper">
                <div class="sidebar-heading border-bottom bg-light"><a
                        class="list-group-item list-group-item-action list-group-item-light p-3"
                        href="/inicio">Inicio</a>
                </div>
                <div class="list-group list-group-flush">
                    <a class="list-group-item list-group-item-action list-group-item-light p-3 active"
                        href="/perfil">Ver
                        Perfil</a>
                    <a class="list-group-item list-group-item-action list-group-item-light p-3" href="/pedidos">Ver
                        Pedidos</a>
                    <a class="list-group-item border-top list-group-item-action list-group-item-light p-3"
                        href="/logout">
                        <p class="text-danger">Cerrar sesión</p>
                    </a>
                </div>
            </div>

            <!-- Page content-->
            <div style="padding: 2%;" class="container">
                <div class="d-flex justify-content-around align-items-center tamales-usuarioNoRegistrado-02-formulario">
                    <div class="tamales-usuarioNoRegistrado-02-formulario-left">
                        <label for="nombre"> Nombre </label>
                        <div class="tamales-usuarioNoRegistrado-02-formulario-box">
                            <input value="<%= usuario[0].nombre %>" class="form-control" type="text" name="nombre"
                                required readonly>
                        </div>

                        <label for="apellidos"> Apellidos </label>
                        <div class="tamales-usuarioNoRegistrado-02-formulario-box">
                            <input value="<%= usuario[0].apellidos %>" class="form-control" type="text" name="apellidos"
                                required readonly>
                        </div>

                        <label for="ciudad">Ciudad</label>
                        <div class="tamales-usuarioNoRegistrado-02-formulario-box">
                            <!-- <select class="form-control" readonly>
                                <option value="Queretaro" selected>Querétaro</option>
                            </select> -->
                            <input value="Querétaro" class="form-control" type="text" name="direccion" required
                                readonly>
                        </div>

                        <label for="telefono"> Teléfono </label>
                        <div class="tamales-usuarioNoRegistrado-02-formulario-box">
                            <input value="<%= usuario[0].telefono %>" class="form-control" type="tel" name="telefono"
                                required readonly>
                        </div>


                    </div>
                    <div class="tamales-usuarioNoRegistrado-02-formulario-right">

                        <label for="colonia">Colonia</label>
                        <div class="tamales-usuarioNoRegistrado-02-formulario-box">
                            <input value="<%= colonia[0].nombreDeColonia%>" class="form-control" type="text"
                                name="direccion" required readonly>
                        </div>

                        <label for="direccion"> Dirección de entrega </label>
                        <div class="tamales-usuarioNoRegistrado-02-formulario-box">
                            <input value="<%= usuario[0].telefono %>" class="form-control" type="text" name="direccion"
                                required readonly>
                        </div>

                        <label for="referencia"> Referencia de la dirección de entrega </label>
                        <div class="tamales-usuarioNoRegistrado-02-formulario-box">
                            <input value="<%= usuario[0].referenciaDomicilio %>" class="form-control" type="text"
                                name="referencia" readonly>
                        </div>

                        <label for="email"> Correo electrónico </label>
                        <div class="tamales-usuarioNoRegistrado-02-formulario-box">
                            <input value="<%= usuario[0].correoElectronico %>" class="form-control" type="email"
                                name="email" required readonly>
                        </div>
                    </div>
                </div>
                <form action='perfil' method='POST'>
                    <input type='hidden' name='_csrf' value='<%= csrfToken %>'>
                    <div class='text-center'>
                        <button class='btn btn-primary btn-md m-4 text-center' type='submit' name='actualizar'
                            value='true'>
                            Cambiar contraseña
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <footer class="page-footer text-center font-small mt-4 wow fadeIn">

        <hr class="my-4">

        <!--Copyright-->
        <div class="footer-copyright py-3">
            © 2021 Copyright:
            <a> Tamales del Norte Querétaro </a>
        </div>
        <!--/.Copyright-->

    </footer>



    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Core theme JS-->
    <!-- <script src="js/scripts.js"></script> -->
    <script src="http://cdn.datatables.net/1.10.24/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        });
    </script>
</body>

</html>